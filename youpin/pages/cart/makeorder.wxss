/* pages/cart/cart.wxss */
.nullcart {position: fixed;width: 100%;height:100vh;background-color: #fff;box-sizing: border-box;padding-top:30vh;text-align: center;font-size:80px;color:#999;}
.nullcart view{font-size:28rpx;font-weight: 300;}

.shopcart-header {padding:0 30rpx;line-height:80rpx;background-color:#fffced;margin-bottom: 20rpx;}
.empty-address{line-height:160rpx;color:#666;font-weight: 300;}
.shopcart-items {background-color:#fff;}
.shopcart-item {margin-left:30rpx;padding:30rpx;padding-left:0px;font-size:24rpx;}
.shopcart-items .shopcart-item:last-child::after{display: none;}
.product-choosen {line-height: 180rpx;padding-right:30rpx;font-size:50rpx;color:#999;}
.product-choosen.checked {color:#f96a5a;}
.cover {width:176rpx;height:176rpx;background-repeat: no-repeat;background-position: center;background-size: cover;border:solid 1px #dfdfdf;margin-right:20rpx;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.product-title {color:#343434;font-size:28rpx;font-weight: 300;height:70rpx;}
.product-title view {overflow: hidden;white-space: nowrap;text-overflow: ellipsis;max-width: 245px;}
.product-sku-attr {height:60rpx;color:#999;font-weight: 300;}
.product-sku-attr view {max-width:245px;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.product-amount text {border:solid 1px #dfdfdf;display:inline-block;padding:0 20rpx;font-size:26rpx;color:#343434;}
.product-footer{line-height:50rpx;}
.product-amount text:first-child{border-right: none;}
.product-amount text:last-child{border-left: none;}
.shopcart-footer{position: fixed;bottom:0;left:0;right:0;height:100rpx;background-color:#fff;line-height: 100rpx;}
.sure {color:#fff;background-color:#f96a5a;padding:0 80rpx;font-weight: 300;font-size:30rpx;}
.total {padding-left:30rpx;color:#f96a5a;}

.address {padding:20rpx 0;font-weight: 300;}
.address .name{width: 120rpx;line-height: 2;}
.address .phone {line-height: 2;}
.address .details {color: #999;font-size: 24rpx;line-height:2;}
.order-attr {background-color:#fff;margin-bottom:20rpx;}
.attr {line-height: 86rpx;padding-right:30rpx;margin-left:30rpx;}
.shopcarts {padding-bottom:100rpx;}

.order-note{background-color: #fff;padding:0 30rpx;margin-top:20rpx;}
.order-note input {margin:0px; padding:0px;width: 100%;line-height: 86rpx;height: 86rpx;color:#666;}
.note-attr {line-height: 86rpx;padding-right:20rpx;}
.box-body {
    padding: 0 30rpx;
    line-height: 2;
    font-size: 28rpx;
}