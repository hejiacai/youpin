page {
    background: #f2f2f2;
    padding: 0;
}

.page-header {
    position: fixed;
    top: 0px;
    left: 0px;
    right: 0px;
    height: 170rpx;
    z-index: 10;
    background-color: #fff;
}

.header-container {
    padding:0 20rpx;
}

.pull-loading {
    height: 170rpx;
    line-height: 170rpx;
    color: #999;
    text-align: center;
    font-size: 24rpx;
    background-color: #fff;
}

.fix-header {
    height: 170rpx;
    line-height: 170rpx;
    color: #c4c4c4;
    text-align: center;
    font-size: 24rpx;
    background-color: #fff;
    font-weight: 300;
}

.header {
    height: 90rpx;
    line-height: 90rpx;
    background-color: #fff;
    display: flex;
    font-size: 24rpx;
}

.header .location {
    padding-right: 40rpx;
    color: #3f3f3f;
}

.header .location .iconfont {
    font-size: 30rpx;
    display: inline-block;
    vertical-align: middle;
    padding-right: 6rpx;
}

.header .search-bar {
    flex-grow: 1;
    padding: 16rpx 0;
}

.header .search-bar-input {
    background-color: #f5f5f5;
    color: #a6a6a6;
    font-size: 28rpx;
    height: 58rpx;
    line-height: 58rpx;
    border-radius: 29rpx;
    padding-left: 30rpx;
}

.navbar {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fff;
    overflow: hidden;
}

.navbar-box {
    width: auto;
    overflow: visible;
    white-space: nowrap;
    padding: 0 10rpx;
}

.navbar-box .navbar-item {
    display: inline-block;
    padding: 0 24rpx;
    font-size: 30rpx;
    color: #3f3f3f;
}

.navbar-box .navbar-item.active {
    position: relative;
    color: #ff9b6a;
}

.navbar-box .navbar-item.active::after {
    content: "";
    position: absolute;
    bottom: 0px;
    left: 24rpx;
    right: 24rpx;
    height: 4rpx;
    background-color: #ff9b6a;
    border-radius: 2rpx;
}

.banners-footer {
    line-height: 90rpx;
    height: 90rpx;
    background-color: #fff;
    font-size: 24rpx;
    font-weight: 300;
}

.banners-footer .iconfont {
    font-size: 32rpx;
    color: #ff9b6a;
}