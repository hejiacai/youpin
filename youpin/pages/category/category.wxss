page {width:100%;height:100vh;overflow: hidden;}
.current-page::before {
    content: "";
    border-top: solid 1rpx #dbdbdb;
    position: absolute;
    top: 0rpx;
    height: 1px;
    left: 0rpx;
    right: 0rpx;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    z-index: 222;
}
.current-page {position: fixed;top: 0px;left:0px;right:0px;bottom:0px;}
.navs {background-color: #fff;position: absolute;left: 0px;width:160rpx;top:0px;bottom:0px;}
.navs::after {
    content: "";
    position: absolute;
    bottom: 0px;
    top:0px;
    width: 1px;
    right: 0;
    border-right: solid 1px #dfdfdf;
    -webkit-transform-origin: 100% 0;
    transform-origin:100%  0;
    -webkit-transform: scaleX(0.5);
    transform: scaleX(0.5);
}
.list {
    line-height: 86rpx;
    height: 86rpx;
    text-align: center;
    font-weight: 300;
    font-size:26rpx;
    overflow: hidden;
    box-sizing: border-box;
    padding:0 8rpx;
}
.list.active {
    color:#ff9b6a;
    font-size:30rpx;
    transition: 0.2s;    
}

.swiper-float-botton {
    transition: 0.2s;
    top:26rpx;
    left: 0rpx;
    width: 4rpx;
    height:32rpx;  
    position: absolute;
    background: #ff9b6a;
}

.category {background-color: #fff;position: absolute;left: 160rpx;right:0;top:0px;bottom:0px;}
.category image {width: 100%;display: block;}
.category-box {padding:30rpx;}
.category-title {text-align: center;font-size:32rpx; color:#353535;padding:40rpx 0;font-weight: 300;}
.category-item {width:33.333333333%;text-align: center;padding-bottom: 50rpx;}
.category-item image {width:120rpx;height:120rpx;display: block;margin:0 auto;}
.category-name {color:#808080;font-weight: 300;font-size:24rpx;padding-top:16rpx;}
.nullData {text-align: center;}