/* pages/payment/pay.wxss */


.user-header {
    background-color: #f96a5a;
    height: 200rpx;
    overflow: hidden;
    box-sizing: border-box;
    padding:30rpx 54rpx;
}

.user-header-cover {
    width:134rpx;
    height:134rpx;
    display: inline-block;
    margin-right:20rpx;
    vertical-align: middle;  
}

.user-header-cover view {
    border:solid 6rpx #fcb5ad;
    width:100%;
    padding-bottom:100%;
    border-radius: 50%;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
}

.user-header-name {
    display:block;
    vertical-align: middle;    
    color:#fff;
    padding-left:20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    line-height: 80rpx;
    height:80rpx;
    font-weight: 300;
}

.user-header-attr {
    display:block;
    vertical-align: middle;    
    color:#fff;
    padding-left:20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    line-height: 80rpx;
    height:80rpx;
    font-weight: 300;
    font-size:24rpx;
}

.user-header-buttons {
    display: block;
    vertical-align: middle;
    text-align: left;
}

.user-header-buttons button {
    display: inline-block;
    border:solid 1px #fff;
    color:#fff;
    padding:0 10rpx;
    margin-left:20rpx;
    margin-right:20rpx;
    font-size:24rpx;
    line-height: 46rpx;
    height:50rpx;
    font-weight: 300;
}


.payinfo {
    background-color: #fff;
    padding: 30rpx;
    text-align: center;
}

.payinfo .status {
    color: #000;
    font-size: 40rpx;
    line-height: 1.2em;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.payinfo .total {
    color: #f96a5a;
    padding-top: 20rpx;
    font-size: 36rpx;
}

.payinfo .details {
    padding-top: 20rpx;
    font-size: 24rpx;
    color: #999;
}

.footer-full {
    position: fixed;
    bottom: 0px;
    height: 100rpx;
    left: 0rpx;
    right: 0px;
    background-color: #ff9b6a;
    color: #fff;
    line-height: 100rpx;
}

.footer-full button {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    margin: 0px;
    padding: 0px;
    border-radius: 0;
    background: none;
    color: #fff;
    font-size: 32rpx;
    vertical-align: middle;
}

.footer-full button text {
    display: inline-block;
    vertical-align: middle;
    line-height: 100rpx;
}

.footer-full button .money {
    font-size: 40rpx;
    font-family: Dotum;
    padding: 0px;
    margin: 0px;
    padding-left: 10rpx;
}

.footer-full button .moenyUntil {
    padding-left: 30rpx;
}

.shopcart-items {background-color:#fff;margin-top:20rpx;}
.shopcart-item {margin-left:30rpx;padding:30rpx;padding-left:0px;font-size:24rpx;}
.shopcart-items .shopcart-item:last-child::after{display: none;}
.product-choosen {line-height: 180rpx;padding-right:30rpx;font-size:50rpx;color:#999;}
.product-choosen.checked {color:#f96a5a;}
.cover {width:176rpx;height:176rpx;background-repeat: no-repeat;background-position: center;background-size: cover;border:solid 1px #dfdfdf;margin-right:20rpx;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.product-title {color:#343434;font-size:28rpx;font-weight: 300;height:70rpx;}
.product-title view {overflow: hidden;white-space: nowrap;text-overflow: ellipsis;max-width: 245px;}

.product-sku-attr {height:60rpx;color:#999;font-weight: 300;}
.product-sku-attr {max-width:245px;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.product-amount text {border:solid 1px #dfdfdf;display:inline-block;padding:0 20rpx;font-size:26rpx;color:#343434;}
.product-footer{line-height:50rpx;}
.product-amount text:first-child{border-right: none;}
.product-amount text:last-child{border-left: none;}
.shopcart-footer{position: fixed;bottom:0;left:0;right:0;height:100rpx;background-color:#fff;line-height: 100rpx;}

.nullData {
  margin-top: 16rpx;
  line-height: 60rpx;
  text-align: center;
  color: #eee;
  box-sizing: border-box;
}

.nullData text.iconfont {
  display: inline-block;
  font-size: 300rpx;
  line-height: 2em;
}

.nullData text {
  display: block;
  color: #666;
  padding-top:200rpx;
}

.box-body {
    padding: 0 30rpx;
    line-height: 2;
    font-size: 28rpx;
}