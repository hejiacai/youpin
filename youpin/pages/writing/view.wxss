/* pages/writing/view.wxss */
page {background-color: #ffffff !important;}
.header {background-color: #ffffff;}
.title {font-size: 40rpx;color:#000;line-height: 56rpx;padding:30rpx 24rpx;font-weight: 400;}
.editor {padding:24rpx;padding-top:0px;}
.editor .cover {width:44rpx;height:44rpx;border-radius: 40rpx;background-size: cover;background-repeat: no-repeat;background-position: center;border:solid 1px #dfdfdf;display:inline-block;vertical-align: middle;}
.editor .name {font-size:24rpx;display:inline-block;vertical-align: middle;line-height: 44rpx; padding-left:20rpx;}
.editor .date {text-align: right;color:#999;font-size:24rpx;line-height: 44rpx;}
.content {padding-top:30rpx;background-color: #ffffff;}
.content .text {padding:24rpx;padding-top:0px;padding-bottom:30rpx;}
.content .image {padding:0;margin:0;padding-bottom:30rpx;}
.content .image image{display: block;}
.content .text.url{color:#ff9b6a;}
.content .product+.product{margin-top:-1px;}
.content .product+.text{padding-top:30rpx;}
.content .product+.image{padding-top:30rpx;}
.content .product+.shop{padding-top:30rpx;}
.content .shop {padding:0;margin:0;padding-bottom:30rpx;}
