/* pages/discover/index.wxss */
.loading {padding-top:100rpx;text-align: center;}
.header {background-color: #fff;padding:0rpx 50rpx;text-align: center;position: fixed;top:0px;left:0px;right:0px;height:80rpx;z-index: 1000}
.header view {display: inline-block;text-align: center;line-height: 80rpx;color:#999;box-sizing: border-box;padding:0 20rpx;margin:0 60rpx;font-size:30rpx;position: relative;}
.header view.active {color:#000;padding:0 10rpx;}
.header view.active::after{content:"";position: absolute;bottom:0px;height:2px;background-color: #000;left:0;right:0;}

.pull-loading {
    height:80rpx;width:100%;
    text-align: center;
    font-size: 24rpx;
    color: #888;
    background-color: #fff;
}

.subnav {background-color: #fff;padding-top:30rpx;padding-bottom:15rpx;margin-bottom:16rpx;}
.subnav>view {display: inline-block;width: 25%;box-sizing: border-box;text-align: center;margin-bottom:15rpx;}
.subnav .cover {width:80rpx;height:80rpx;margin:0 auto;border-radius: 40rpx;background-size: cover;background-repeat: no-repeat;background-position: center;}
.subnav .name {padding-top:12rpx;font-size:24rpx;color:#343434;width:160rpx;text-align: center;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;margin:0 auto;}

.nullData {
  background-color: #fff;
  line-height: 60rpx;
  text-align: center;
  color: #eee;
  box-sizing: border-box;
}

.nullData text.iconfont {
  display: inline-block;
  font-size: 300rpx;
  line-height: 2em;
}

.nullData text {
  display: block;
  color: #666;
  padding-top:200rpx;
}

.writings-box {background-color: #fff;}


.module-product-lrs {
    background-color: #fff;
    padding: 10px;
}

.module-product-lrs .cover {
    width: 60px;
    height: 60px;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    margin-right: 10px;
    border:solid 1px #dfdfdf;    
}

.module-product-lrs .right-shop {
    max-width: 560rpx;
}

.module-product-lrs .name {
    line-height: 20px;
    height: 40px;
    overflow: hidden;
    max-width: 285px;
}

.module-product-lrs .price {
    line-height: 20px;
    height: 20px;
    font-size: 16px;
    color: #fb6955;
}

.module-product-lrs .shopname {
    line-height: 20px;
    height: 20px;
    overflow: hidden;
}

.module-product-lrs .desg {
    line-height: 20px;
    height: 40px;
    font-size: 12px;
    color: #999;
    overflow: hidden;
}
